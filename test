pipeline {
	agent { label 'mvnbuildserver1' }

    tools {
        maven "maven"
    }

	stages {
		stage('SCM Checkout') {
			steps {
				echo 'SCM CHECKOUT'
				git 'https://github.com/LoksaiETA/Java-mvn-app2.git'

			}
		}
		stage('Java App Build') {
			steps {
				echo 'Perform Maven Build'
				sh 'mvn -Dmaven.test.failure.ignore=true clean package'
			}
		}
		stage('Deploy to QA Server') {
			steps {
				echo 'Deploy to QA'
				echo 'Hello Everyone'
			}
		}
	}
}
